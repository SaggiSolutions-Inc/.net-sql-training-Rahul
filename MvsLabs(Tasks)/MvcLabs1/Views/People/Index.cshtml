<h1>List of People</h1>

@{
	List<PersonModel> people = ViewBag.people;
}
<table class="table">
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>Gender</th>
		<th>Age</th>
		<th>Operations</th>
	</tr>
	@foreach(PersonModel p in people)
	{
		<tr>
		<td>@p.Id</td>
		<td>@p.PName</td>
		<td>@p.Gender</td>
		<td>@p.Age</td>
		<td><a asp-controller="People" asp-action="details" asp-route-id="@p.Id">Select</a></td>
		</tr>
	}
</table>
